<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="NavPageSample.page.TestPage">

    <StackLayout>

        <Label Text="テスト画面"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

        <Entry x:Name="Birth_Entry"
    Placeholder="生年月日を入力してください。" />
        <Entry x:Name="Sex_Entry"
    Placeholder="あなたの性別は？？" />
        <Entry x:Name="BloodType_Entry"
    Placeholder="あなたの血液型は？？"/>
        <Entry x:Name="Height_Entry"
    Placeholder="身長を入力"/>
        <Entry x:Name="Weight_Entry"
    Placeholder="体重を入力"/>
        <Entry x:Name="Tabako_Entry"
    Placeholder="タバコは吸いますか？？"/>
        <Entry x:Name="Drinking_Entry"
    Placeholder="お酒は飲みますか？？"/>
        <Entry x:Name="Allegry_Entry"
    Placeholder="アレルギー歴"/>
        <Entry x:Name="Taking_History_Entry"
    Placeholder="副作用歴"/>
        
        
        <Entry x:Name="Day_Breakfast_Entry"
    Placeholder="朝食の時間"/>
        <Entry x:Name="Clockin_Time_Entry"
    Placeholder="出勤する時間"/>
        <Entry x:Name="Day_lunch_Entry"
    Placeholder="昼食の時間"/>

        <Entry x:Name="End_Breakfast_Entry"
    Placeholder="朝食の時間"/>
        <Entry x:Name="End_Lunch_Entry"/>


        <Button Text="この情報をアンケートに登録"
    Clicked="OnAddButtonClicked" />

        <ListView x:Name="listview"
     ItemTapped="TappedlistviewItem"
     HasUnevenRows = "True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <StackLayout>
                                <Label Text="{Binding Subject}"/>
                                <Label Text="{Binding Content}"/>
                                <Label Text="{Binding Date}"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView >
    </StackLayout>

</ContentPage>