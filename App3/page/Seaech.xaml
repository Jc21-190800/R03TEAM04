<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NavPageSample.page.Seaech">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#000000" Padding="24" CornerRadius="0">
                <Label Text="薬の登録" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>


            <SearchBar Placeholder="Search..."
                       TextChanged="SearchBar_TextChanged"
                       SearchButtonPressed="SearchBar_SearchButtonPressed"/>

            <ListView x:Name="MyListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Id}"
                                  Detail="{Binding ProductName}">

                        </TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>





        </StackLayout>
    </ContentPage.Content>
</ContentPage>